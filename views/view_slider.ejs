
<%- include('header') %>


            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-header"  >
                                    <input class="au-input au-input--xl" type="text" name="search"  placeholder="Search for datas &amp; reports..." />
                                    <button class="au-btn--submit" type="submit" name="searching" >
                                        <i class="zmdi zmdi-search"></i>
                                    </button>
                                </form>
                                <div class="table-responsive table--no-card m-b-30">
                                    <form method="post" action="/slider/multiDelete">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th><input type="checkbox" id="allCheckBox">
                                                <button type="submit" style="color:white"><i class="fa fa-trash"></i></button></th>
                                                <th>No</th>
                                                <th>Title</th>
                                                <th>Content</th>
                                                <th>image</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var ad of sliderData){ %>
                                            <tr>
                                                <td><input type="checkbox" value="<%= ad.id %>" name="multiDelete[]" class="checkBoxClass" /></td>
                                                <td>1</td>
                                                <td><%= ad.title %></td>
                                                <td><%= ad.content %></td>
                                                <td><img src="<%= ad.image %>" height="50" width="50" ></td>
                                                <td>
                                                    <% if(ad.isActive){ %>
                                                      <a href="?id=<%= ad.id %>&status=deactive&page=<%= currentPage %>">Active</a>
                                                    <% } else { %>
                                                        <a href="?id=<%= ad.id %>&status=active&page=<%= currentPage %>">Deactive</a>
                                                    <% } %>
                                                </td>
                                                <td>Delete || Update</td>
                                            </tr>
                                            <% } %>
                                            <tr>
                                                <td colspan="6">
                                                    <!-- <% for(var i= 1; i<=pagesData; i++){ %>
                                                        <a href="?page=<%= i %>"><%= i %></a>
                                                        <% } %> -->
                                                        <% var prev = currentPage;
                                                          var prev = --prev; %>
                                                    <% if(prev > 0){ %>
                                                    <a href="?page=<%= prev %>&search=<%= searchData %>">Prev</a>
                                                    <% } %>

                                                    <a href="<%= currentPage %>&search=<%= searchData %>"><%= currentPage %></a>
                                                    
                                                    <% var next = ++currentPage %>
                                                    <% if(pagesData >= next){ %>
                                                    <a href="?page=<%= next %>&search=<%= searchData %>">Next</a>
                                                    <% } %>
                                                </td>
                                            </tr>
                                       
                                        </tbody>
                                    </table>
                                </form>
                                </div>
                            </div>
                          
                        </div>
                        
                        <%- include('footer') %>